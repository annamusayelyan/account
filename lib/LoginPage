import 'package:flutter/material.dart';
import 'package:account_app/final.dart';


class LoginPage extends StatefulWidget {
  @override
  State<StatefulWidget> createState() {
    return LoginPageState();
  }
}

class LoginPageState extends State<LoginPage> {
  String name;
  String surname;
  String email;
  int phone;
  int date;
  String homePlace;
  int code;
  String married;
  String teacher;
  String hobby;

  @override
  Widget build(BuildContext context) {
    return Scaffold(
            appBar: AppBar(title: Text('Create Account')),
            body: Container(
              margin: EdgeInsets.all(15.0),
              child: ListView(
                children: <Widget>[
                  TextField(
                    onChanged: (String value) {
                      setState(() {
                        name = value;
                      });
                    },
                    decoration: InputDecoration(
                      labelText: 'Name',
                    ),
                  ),
                  TextField(
                    onChanged: (String value) {
                      setState(() {
                        surname = value;
                      });
                    },
                    decoration: InputDecoration(
                      labelText: 'Surname',
                    ),
                  ),
                  TextField(
                    onChanged: (String value) {
                      setState(() {
                        email = value;
                      });
                    },
                    decoration: InputDecoration(
                      labelText: 'E-mail address',
                    ),
                  ),
                  TextField(
                    keyboardType: TextInputType.number,
                    onChanged: (String value) {
                      setState(() {
                        phone = int.parse(value);
                      });
                    },
                    decoration: InputDecoration(
                      labelText: 'Phone',
                    ),
                  ),
                  TextField(
                    onChanged: (String value) {
                      setState(() {
                        date = int.parse(value);
                      });
                    },
                    decoration: InputDecoration(
                      labelText: 'Date of birth',
                    ),
                  ),
                  TextField(
                    onChanged: (String value) {
                      setState(() {
                        homePlace = value;
                      });
                    },
                    decoration: InputDecoration(
                      labelText: 'Home Place',
                    ),
                  ),
                  TextField(
                    onChanged: (String value) {
                      setState(() {
                        code = int.parse(value);
                      });
                    },
                    decoration: InputDecoration(
                      labelText: 'Code',
                    ),
                  ),
                  TextField(
                    onChanged: (String value) {
                      setState(() {
                        married = value;
                      });
                    },
                    decoration: InputDecoration(
                      labelText: 'Married',
                    ),
                  ),
                  TextField(
                    onChanged: (String value) {
                      setState(() {
                        teacher = value;
                      });
                    },
                    decoration: InputDecoration(
                      labelText: 'Teacher',
                    ),
                  ),
                  TextField(
                    onChanged: (String value) {
                      setState(() {
                        hobby = value;
                      });
                    },
                    decoration: InputDecoration(
                      labelText: 'Hobby',
                    ),
                  ),
                ],
              ),
            ),
            floatingActionButton: FloatingActionButton(
                child: Icon(Icons.add),
                onPressed: () => Navigator.push(
                    context,
                    MaterialPageRoute(
                      builder: (BuildContext context) => FinalPage(name,surname,email,phone,date,homePlace,code,married,teacher,hobby),
                    ))));
  }
}
